# bbox and rotation concatenation
layer {
  name: "fc8-bbox-rot-concat"
  type: "Concat"
  # Concat networks by uncommenting 
  bottom: "fc8"
  bottom: "fc8-rot"
  top: "fc8-bbox-rot-concat"
  concat_param {
    axis: 1
  }
}

# TODO: more readable version for negating a layer?
# Power layer with scale: -1 is a nice trick but hard to read
layer {
  name: "neg"
  bottom: "bbox"
  top: "bbox_neg"
  type: "Power"
  power_param {
    power: 1
    scale: -1
    shift: 0
  }
}
layer {
  name: "flatten"
  type: "Flatten"
  bottom: "bbox_neg"
  top: "bbox_neg_flat"
}

layer {
  name: "subtract"
  type: "Eltwise"
  bottom: "fc8-bbox-rot-concat"
  bottom: "bbox_neg_flat"
  top: "out_diff"
}


# Flexibility to limit loss to only rotation for training
# slice_point 0: loss is bbox + rotation
# slice_point 3: loss is only rotation (bbox is silenced)
# TODO: check this works
layer {
  name: "out_diff_slice"
  type: "Slice"
  bottom: "out_diff"
  top: "out_diff_slice_silenced"
  top: "out_diff_slice_loss"
  slice_param {
    axis: 1
    slice_point: 3
  }
}

layer {
  name: "out_diff_slice_silenced"
  type: "Silence"
  bottom: "out_diff_slice_silenced"
}

layer {
  name: "abssum"
  type: "Reduction"
  # bottom: "out_diff"
  bottom: "out_diff_slice_loss"
  top: "loss"
  loss_weight: 1
  reduction_param {
    # Absolute Sum
    operation: 2
  }
}

